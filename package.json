    "@babel/preset-env": "^7.10.4",
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.8.5",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss": "^8.2.10",
    "postcss-csso": "^4.0.0",
    "postcss-fixes": "^2.0.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "tailwindcss": "^1.5.2",
    "terser-webpack-plugin": "^3.0.7",
    "testcafe": "^1.8.8",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-require-from": "^1.8.1"
  },
  "optionalDependencies": {
    "fsevents": "^1.2.11"
  },
